---
import '../styles/global.css';
import Layout from "./Layout.astro";
import Header from "./Header.astro";
import Footer from "./Footer.astro";

const {frontmatter} = Astro.props;

---

<Layout title={frontmatter.title}>
    <main>
        <Header />
        <section class="markdown-content">
            <article>
                <slot />
            </article>
        </section>
        <Footer />
    </main>
</Layout>

<!-- Style is global to be able to effect the underlying markdown content. Thus keep reference to ID to prevent global scope bloat -->
<style is:global>
.markdown-content {
    width: 100%;
	padding: 0 20px;
}

.markdown-content {
	min-height: 100vh;
	display: flex;
	flex-direction: column;
}

.markdown-content article {
    margin: 0 auto;
    max-width: 800px;
    width: 100%;
}

.markdown-content img {
    display: block;
    margin: 16px auto;
    width: 100%;
    max-width: 100%;
    height: auto;
}

/* Centered embeds produced by Obsidian preprocessor */
.markdown-content .blog-embed {
    display: block;
    margin: 16px auto;
}
.markdown-content .blog-embed img {
    display: block;
    margin: 0 auto;
    max-width: 100%;
    height: auto;
}
.markdown-content .blog-embed iframe {
    display: block;
    margin: 0 auto;
    width: 100%;
    aspect-ratio: 16 / 9;
    border: 0;
}

.markdown-content a {
    text-decoration: underline;
}

.markdown-content p.intro {
    font-size: 20px;
    line-height: 1.6;
    color: #111;
}

.markdown-content blockquote {
    background-color: #f5f5f5;
    font-style: italic;
    margin-left: 0px;
}

</style>
