---
import '~/styles/global.css';
import Layout from "~/layouts/Layout.astro";
import StockSubscribe from '~/components/StockSubscribe.astro';

import monkeyFaceImg from '~/assets/monkey/monkey_face.svg';
import logoImg from '~/assets/logo.svg';
import { routes } from '~/routes';
---

<Layout title="Wavy Industries: Monkey purchase">
  <div id="purchase-loading" class="page-loading">
    <div class="spinner" aria-hidden="true"></div>
    <!-- <p>Loading price and availability…</p> -->
  </div>
  <section id="purchase-section" class="hidden">
    <div class="banner"><img src={logoImg.src} /></div>
    <div>
    <div class="content">
      <div style="display: flex; flex-direction: row; justify-content: space-between; align-items: center;">
        <h4>WAVY MONKEY</h4>
        <img src={monkeyFaceImg.src} width="50" alt="Monkey face" />
      </div>
      <p>
        Price: <b id="product-price">Loading price…</b> <span id="VAT">Checking VAT…</span> <small id="price-meta" class="price-meta"></small><br/>
        <small id="region-label" class="region-label"></small><br/>
        <i class="shipping-info">Depending on your country, import taxes may apply. We collect duties for you in the EU, so you will not have to pay additionally upon delivery.</i>
      </p>
      <p style="color: orange;" class="shipping-info" >New orders ship early January 2026 ☃️.</p>
      <div id="shipping-status"></div>
      <div id="shipping-status-leadtime" class="shipping-info"></div>
    </div>
    <hr />
    <div class="content quantity-card">
      <div class="quantity-row">
        <span>Quantity</span>
        <div class="quantity-controls">
          <button type="button" id="quantity-decrease" class="quantity-button">-</button>
          <span id="quantity-display" class="quantity-value">1</span>
          <input id="quantity" type="hidden" value="1" />
          <button type="button" id="quantity-increase" class="quantity-button">+</button>
        </div>
      </div>
      <div class="quantity-total-row">
        <span>Total (excl. tax)</span>
        <span id="total-price" class="quantity-total">Loading…</span>
      </div>
      <div class="quantity-total-row tax-row">
        <span id="tax-label">Taxes</span>
        <span id="tax-amount" class="quantity-total">Calculating…</span>
      </div>
    </div>
    </div>
    <center>
      <div id="buy-now-wrapper">
        <button id="buy-now-button" class="chechout-button" disabled>Continue to checkout</button>
        <p id="buy-error" class="shipping-info hidden"></p>
      </div>
    </center>
    <script src="../../scripts/monkey/purchase.js"></script>
    <p class="shipping-info">By proceeding you agree to our sales <a target="_blank" href={routes.termsAndConditions}>terms & conditions.</a> </p>
    <br/>
   <div id="stock-notify-form" class="content hidden">
     <StockSubscribe />
   </div>
  </section>
</Layout>


<style>  
section {
  margin: 20px auto;
  width: 400px;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.page-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12px;
  min-height: 60vh;
  text-align: center;
  color: #1f1f1f;
}

.spinner {
  width: 42px;
  height: 42px;
  border-radius: 50%;
  border: 2px solid #ffffff;
  border-top-color: #000000;
  animation: spin 0.5s linear infinite;
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
  
hr {
  border: 0;
  margin: 0;
  height: 1px;
  background: #d5d5d5;
}

input {
  margin-top: 10px;
}

.banner {
  background-color: #d5d5d5;
  padding: 20px;
}

.content {
  background-color: #F5F5F5;
  padding: 20px;
  /* min-height: 300px; */
}

.quantity-card {
  display: flex;
  flex-direction: column;
  gap: 4px;
  font-size: 13px;
}

.quantity-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #333;
}

.quantity-controls {
  display: inline-flex;
  align-items: center;
  gap: 6px;
}

.quantity-button {
  border: 1px solid #ccc;
  background-color: #fff;
  padding: 2px 8px;
  cursor: pointer;
  font-size: 16px;
  line-height: 1;
}

.quantity-button:hover {
  background-color: #f0f0f0;
}

.quantity-value {
  min-width: 1.5ch;
  text-align: center;
  font-variant-numeric: tabular-nums;
}

.quantity-total-row {
  display: flex;
  justify-content: space-between;
  border-top: 1px dashed #ccc;
  padding-top: 4px;
  margin-top: 4px;
}

.quantity-total {
  font-variant-numeric: tabular-nums;
}

.tax-row {
  color: #555;
  font-size: 14px;
}

#VAT {
  font-size: 12px;
  margin-left: 5px;
  font-style: italic;
}

.chechout-button {
  background-color: #5A88FF;
  color: white;
  width: 100%;
  border: none;
  padding: 20px 0;
  font-weight: bold;
  font-size: 16px;
  text-align: center;
}

.chechout-button:hover {
  background-color: #4378ff;
  /* cursor: pointer; */
  text-decoration: none;
}
.price-meta {
  font-size: 11px;
  color: #444;
}
.region-label {
  font-size: 11px;
  color: #444;
}

/* add stock status classes with light background colors */
#shipping-status {
  padding: 5px;
  margin-top: 10px;
  font-style: italic;
  display: inline-block;
}

.shipping-info {
  font-size: 12px;
  font-style: italic;
}

.in-stock {
  background-color: #d4edda;
}

.out-of-stock {
  background-color: #f7f8d7;
}

.low-stock {
  background-color: #f4ffcd;
}

.unknown-stock {
  background-color: #eee;
}
.hidden {
  display: none;
}
</style>
